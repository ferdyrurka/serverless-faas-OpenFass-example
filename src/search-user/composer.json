{
    "name": "function-php7.2",
    "description": "Template for function in PHP 7.2",
    "type": "project",
    "require": {
        "php": "^7.2",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "8.1.*",
        "mockery/mockery": "1.2.*"
    },
    "config": {
        "classmap-authoritative": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    }
}
